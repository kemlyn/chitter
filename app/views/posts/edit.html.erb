<div class="container">
  <h2>Edit your post</h2>
  <hr style="border: none; border-bottom: 1px solid black;">
  <%= simple_form_for @post do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :content %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Create' %>
      <%= link_to "Cancel", :back %>
    </div>
  <% end %><hr>
</div>
